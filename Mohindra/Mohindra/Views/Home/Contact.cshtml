                <h3>
                    Get in Touch
                </h3>
            </div>
            <div class="form-group">
                <label for="pwd">
                    Name:
                </label>

                <input type="text" class="form-control" runat="server" id="name" required="" placeholder="Enter Your Name" />
            </div>
            <div class="form-group">
                <label for="email">
                    Email:
                </label>
                <input class="form-control email" runat="server" id="email" placeholder="Enter Your Email Id" />
            </div>
            <div class="form-group">
                <label for="email">
                    Contact No:
                </label>
                <input class="form-control contactNo" type="text" runat="server" id="contactNo" placeholder="Enter Your Contact No" />
            </div>
            <div class="form-group">
                <label for="email">
                    Message:
                </label>
                <textarea class="form-control" id="message" runat="server" minlength="20" maxlength="200"
                          required="" placeholder="Enter Your Message (20-200 characters)"></textarea>
            </div>
            <div class="form-group text-center">
                <asp:Button ID="Button1" CssClass="btn btn-primary" runat="server" Text="Submit"
                            OnClick="Button1_Click" />
            </div>
        </div>
