<div id="contactus"></div>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Contact", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="row" style="padding: 20px; margin-top: -40px;">
                    <div class="col-lg-6 col-md-6 col-xs-12 col-sm-8">
                        <div class="text-center">
                            <h3>
                                Get in Touch
                            </h3>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control name", @placeholder = "Enter Your Name" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control email", @placeholder = "Enter Your Email Id" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.ContactNo, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control contactNo", @placeholder = "Enter Your Contact No" })
                                @Html.ValidationMessageFor(m => m.ContactNo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Message, new { @class = "form-control contactNo", @placeholder = "Enter Your Message (20-200 characters)", @minlength = "20", @maxlength="200" })
                                @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        
                        <div class="form-group text-center">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Submit" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-xs-12 col-sm-4">
                        <div class="text-center">
                            <h3>
                                Our Service Area
                            </h3>
                        </div>
                        <div id="googleMap" style="height: 350px; margin-top: 38px;">
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
